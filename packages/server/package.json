{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "rimraf dist && tsc --p tsconfig.prod.json",
    "preview": "node ./dist/index.js",
    "preDev": "rimraf dist && tsc -p tsconfig.json",
    "dev": "npm run preDev && concurrently --kill-others \"tsc -w -p tsconfig.json\" \"cross-env NODE_ENV=development nodemon\"",
    "lint": "eslint \"**/*.{js,ts}\" --max-warnings=0",
    "tsc": "tsc --noEmit --p ./tsconfig.json",
    "format": "prettier --write .",
    "check-errors": "npm run tsc && npm run lint",
    "test": "jest ."
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/pg": "^8.6.5",
    "babel-jest": "^29.0.1",
    "eslint": "^8.23.0",
    "ts-node": "^10.9.1"
  },
  "license": "MIT"
}
