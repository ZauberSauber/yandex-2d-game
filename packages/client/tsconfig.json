{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@slices/*": ["src/slices/*"],
      "@slices": ["src/slices"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@hooks": ["src/hooks"],
      "@layout": ["src/layout"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"]
    },
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "noEmit": true,
    "types": ["vite/client"]
  },
  "include": ["src", "src/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.server.json" }]
}
